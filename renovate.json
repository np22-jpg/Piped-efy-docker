{
  "platformAutomerge": true,
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "config:best-practices",
    "default:automergeDigest",
    "docker:enableMajor"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": true
    }
  ],
  "git-submodules": {
    "enabled": true,
    "versioning": "git",
    "fileMatch": [
      "(^|/)\\.gitmodules$"
    ],
    "automerge": true
  },
  "includeForks": true
}